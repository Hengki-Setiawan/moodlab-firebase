
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Public collections that anyone can read. Writes are restricted.
    match /projects/{projectId} {
      allow read: if true;
      allow write: if false; 
    }

    match /digitalProducts/{productId} {
      allow read: if true;
      allow write: if false;
    }
    
    match /teamMembers/{memberId} {
      allow read: if true;
      allow write: if false;
    }

    // Contact submissions should only be created. No one should read them from the client.
    match /contactSubmissions/{submissionId} {
      allow read: if false;
      allow create: if true;
      allow update, delete: if false;
    }
    
    // Users can only read their own orders.
    // Order creation is handled by server actions, but we can allow client-side creation for authenticated users.
    match /orders/{orderId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if false;
    }

    // Fallback rule: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
