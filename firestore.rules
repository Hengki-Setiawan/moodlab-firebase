
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read for projects, products, and team members
    match /projects/{projectId} {
      allow read: if true;
      allow write: if false;
    }

    match /digitalProducts/{productId} {
      allow read: if true;
      allow write: if false;
    }

    match /teamMembers/{memberId} {
      allow read: if true;
      allow write: if false;
    }

    // Allow anyone to submit a contact form, but no one to read them
    match /contactSubmissions/{submissionId} {
      allow read: if false;
      allow create: if true;
      allow update, delete: if false;
    }

    // Rules for user orders
    match /orders/{orderId} {
      // Allow a user to create a new order document
      allow create: if request.auth != null;

      // Allow a user to read their own single order document
      allow get: if request.auth != null && request.auth.uid == resource.data.userId;

      // Allow a user to list/query their own orders, but not all orders
      allow list: if request.auth != null && request.auth.uid == request.query.filters.userId;

      // Nobody can update or delete an order from the client-side
      allow update, delete: if false;
    }
  }
}
