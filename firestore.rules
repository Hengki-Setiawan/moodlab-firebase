
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Projects: Publicly readable, admin-only write.
    match /projects/{projectId} {
      allow read: if true;
      allow write: if false; // To be managed by admin later
    }

    // Team Members: Publicly readable, admin-only write.
    match /teamMembers/{teamMemberId} {
      allow read: if true;
      allow write: if false; // To be managed by admin later
    }
    
    // Contact Submissions: Admin-only access.
    match /contactSubmissions/{submissionId} {
      allow read, write: if false; // To be managed by admin later
      allow create: if true; // Allow anyone to submit the form
    }

    // User data: Users can only access their own data.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Transactions: Users can create transactions for themselves,
      // and read their own transaction history.
      match /transactions/{transactionId} {
        allow create, read: if request.auth != null && request.auth.uid == userId;
        allow update, delete: if false; // Prevent users from altering history
      }
    }
  }
}
