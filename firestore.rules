rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to projects and team members
    match /projects/{projectId} {
      allow read: if true;
      allow write: if false; // Admin only
    }

    match /teamMembers/{memberId} {
      allow read: if true;
      allow write: if false; // Admin only
    }

    // Allow anyone to submit a contact form
    match /contactSubmissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if false; // Admin only
    }

    // Rules for user-specific data
    match /users/{userId} {
      // A user can only access their own user document, for potential future use.
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // A user can list and create their own transactions.
      // They can only read/update/delete individual transactions if they own them.
      match /transactions/{transactionId} {
        allow list, create: if request.auth != null && request.auth.uid == userId;
        allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
